{
  "name": "dbml-preview",
  "displayName": "dbml-preview",
  "description": "DBML code preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dbml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dbml",
        "aliases": [
          "Database Markup Language",
          "DBML",
          "dbml"
        ],
        "extensions": [
          "dbml"
        ]
      }
    ],
    "commands": [
      {
        "command": "dbml-preview.openPreview",
        "title": "Open Database Schema Preview",
        "category": "DBML",
        "icon": {
          "light": "./assets/preview-light.png",
          "dark": "./assets/preview-dark.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "dbml-preview.openPreview",
          "when": "editorLangId == dbml",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}